{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "plugin:redux-saga/recommended"
  ],
  "plugins": [
    "redux-saga"
  ],
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "max-len": [1, { "code": 200 }],
    "import/prefer-default-export": 0,
    "react/forbid-prop-types": 0
  },
  "overrides": [{
    "files": "**/*.stories.{js,jsx}",
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  }, {
    "files": "**/*.test.{js,jsx}",
    "rules": {
      "no-console": 0,
      "redux-saga/no-unhandled-errors": 0
    }
  }],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "globals": {
    "APP_NAME": true,
    "APP_VERSION": true
  }
}
