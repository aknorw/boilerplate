{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "max-len": [1, { "code": 200 }],
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 1,
    "react/forbid-prop-types": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "globals": {
    "APP_NAME": true,
    "APP_VERSION": true
  }
}
